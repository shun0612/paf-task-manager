<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_for @user, url:users_create_path do |f| %>
          <div class="field">
            <%= f.label :name, "ユーザー名" %>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email %>
          </div>
          <div class="field">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password %>
          </div>
          <%= f.submit  "登録"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
