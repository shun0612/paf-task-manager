<div class="main users-edit">
  <div class="container">
    <div class="form-heading">アカウント編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_for @user, :url => {:controller => :users, :action => :update, :id => params[:id]}  do |f| %>
          <p>ユーザー名</p>
          <%= f.text_field :name, value:@user.name %>
          <p>メールアドレス</p>
          <%= @user.email %>
          <p>パスワード</p>
          <%= f.password_field :password, value:@user.password %>
          <%= f.submit  "保存" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
